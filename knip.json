{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "packages/api": {
      "entry": [
        "src/index.ts",
        "src/middleware/auth.ts",
        "src/middleware/rate-limit.ts",
        "src/routes/*.ts"
      ],
      "project": ["src/**/*.ts"],
      "ignore": ["src/**/*.test.ts", "src/lib/storage.ts", "src/lib/supabase.ts"]
    },
    "packages/app": {
      "entry": ["src/main.tsx", "src/App.tsx", "src/routes/**/*.tsx"],
      "project": ["src/**/*.{ts,tsx}"],
      "ignore": [
        "src/**/*.test.{ts,tsx}",
        "src/components/**",
        "src/contexts/**",
        "src/hooks/**",
        "src/lib/**",
        "src/routeTree.gen.ts",
        "src/pages/**"
      ],
      "ignoreDependencies": [
        "@hookform/resolvers",
        "@radix-ui/react-alert-dialog",
        "@radix-ui/react-avatar",
        "@radix-ui/react-dialog",
        "@radix-ui/react-dropdown-menu",
        "@radix-ui/react-label",
        "@radix-ui/react-progress",
        "@radix-ui/react-select",
        "@radix-ui/react-separator",
        "@radix-ui/react-slot",
        "@radix-ui/react-toast",
        "@supabase/supabase-js",
        "@types/leaflet",
        "class-variance-authority",
        "clsx",
        "hono",
        "leaflet",
        "react-hook-form",
        "react-leaflet",
        "tailwind-merge",
        "zod"
      ]
    },
    "packages/shared": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"],
      "ignore": ["src/**/*.test.ts"]
    }
  },
  "ignoreExportsUsedInFile": true,
  "ignoreDependencies": ["@commitlint/cli", "bun-types"],
  "ignoreBinaries": ["lsof"]
}
